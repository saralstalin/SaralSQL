{
  "name": "saralsql",
  "displayName": "SaralSQL : Preview",
  "description": "Language Server for SQL ( SSDT / Database Projects in VS Code)",
  "publisher": "SaralStalin",
  "keywords": [
    "SQL",
    "language server",
    "VS Code"
  ],
  "license": "MIT",
  "version": "0.2.12",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:sql"
  ],
  "contributes": {
    "languages": [
      {
        "id": "sql",
        "aliases": [
          "SQL",
          "sql"
        ],
        "extensions": [
          ".sql"
        ]
      }
    ],
    "configuration": {
      "title": "SaralSQL",
      "properties": {
        "saralsql.enableValidation": {
          "type": "boolean",
          "default": false,
          "description": "Enable lightweight SQL validation (experimental). Disabled by default."
        },
        "saralsql.exclude": {
          "type": "array",
          "default": [
            "**/pre-deployment/**",
            "**/post-deployment/**",
            "**/deploy/**"
          ],
          "description": "Glob patterns to exclude from indexing"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "node-sql-parser": "^5.3.12",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/saralstalin/SaralSQL.git"
  }
}
